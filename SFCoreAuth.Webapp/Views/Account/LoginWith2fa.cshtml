@model SFCoreAuth.Application.ViewModels.LoginWith2faViewModel
@{
    ViewData["Title"] = "Otentikasi Dua Faktor";
}

<h2>@ViewData["Title"]</h2>
<hr />
<p>Login Anda dilindungi dengan aplikasi otentikator. Masukkan kode otentikator Anda di bawah ini.</p>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <input asp-for="RememberMe" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="TwoFactorCode" class="form-control" autocomplete="off" />
                <label asp-for="TwoFactorCode" class="form-label"></label>
                <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="RememberMachine" class="form-label">
                    <input asp-for="RememberMachine" />
                    @Html.DisplayNameFor(m => m.RememberMachine)
                </label>
            </div>
            <div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}